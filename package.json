{
  "name": "@johnqh/mail-box-components",
  "version": "1.5.0",
  "description": "Reusable UI components and design system for mail box applications",
  "main": "dist/index.umd.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite build --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "prepublishOnly": "npm run build",
    "setup:deps": "node scripts/setup-dependencies.js",
    "setup:local": "USE_LOCAL_LIB=true INSTALL_DEPS=true npm run setup:deps",
    "setup:npm": "USE_LOCAL_LIB=false INSTALL_DEPS=true npm run setup:deps"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "design-system",
    "typescript",
    "tailwindcss"
