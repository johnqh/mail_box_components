{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Library specific */
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": [
    "src/index.ts",
    "src/lib/**/*",
    "src/hooks/**/*",
    "src/components/**/*",
    "src/ui/**/*",
    "src/utils/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.*",
    "**/__tests__/**",
    "src/utils/optimization/selectiveImports.ts",
    "src/utils/optimization/web3Optimization.ts",
    "**/*.example.*",
    "src/lib/variant-examples.tsx",
    "src/lib/variant-registry.ts",
    "src/lib/variant-provider.tsx",
    "src/lib/variant-builder.ts"
  ]
}