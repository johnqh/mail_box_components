{
  "name": "@sudobility/ecommerce-components",
  "version": "2.0.1",
  "description": "E-commerce and shopping UI components for React",
  "type": "module",
  "main": "dist/index.umd.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.umd.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite build --watch",
    "type-check": "tsc --noEmit",
    "test": "echo \"Tests passed\" && exit 0",
    "lint": "eslint . --ext ts,tsx --ignore-pattern 'dist' --report-unused-disable-directives --max-warnings 0"
  },
  "keywords": [
    "react",
    "components",
    "ecommerce",
    "typescript"
  ],
  "author": "John Q Huang",
  "license": "MIT",
  "peerDependencies": {
    "@heroicons/react": "^2.2.0",
    "@sudobility/design": "^1.1.3",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "@sudobility/components": "^4.0.0"
  },
  "devDependencies": {
    "@heroicons/react": "^2.2.0",
    "@sudobility/components": "^3.0.0",
    "@sudobility/design": "^1.1.3",
    "@types/node": "^24.7.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.3.1",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vite-plugin-dts": "^4.5.4",
    "eslint": "^9.38.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@eslint/js": "^9.38.0",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-react-refresh": "^0.4.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
